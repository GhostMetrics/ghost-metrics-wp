{
  "name": "ghostmetrics/ghost-metrics-wp",
  "description": "Ghost Metrics WordPress Plugin",
  "license": "GPL-2.0+",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Chris Wathen",
      "email": "support@ghostmetrics.io",
      "homepage": "https://ghostmetrics.io"
    }
  ],
  "support": {
    "src": "https://github.com/GhostMetrics/ghost-metrics-wp",
    "issues": "https://github.com/GhostMetrics/ghost-metrics-wp/issues"
  },
  "autoload": {
    "psr-4": {
      "GhostMetricsWP\\Inc\\": "./inc"
    }
  },
  "scripts": {
    "cstd": "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "cs": "./vendor/bin/phpcs --standard=.phpcs.xml --report=summary .",
    "cbf": "./vendor/bin/phpcbf --standard=.phpcs.xml ."
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7.2",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^9.5",
    "phpunit/php-code-coverage": "^9.2",
    "yoast/phpunit-polyfills" : "^2.0"
  }
}
